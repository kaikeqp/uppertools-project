@model UpperToolsProject.Models.Empresa

@{
    ViewData["Title"] = "BuscarCadastro";
}

<h1>Empresas</h1>

<h4>Buscar</h4>
<hr />

@if (TempData["msg"] != null)
{
    <p class="alert alert-danger" id="dangerMessage">@TempData["msg"]</p>
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label" for="cnpj"></label>
                <input asp-for="Cnpj" class="form-control" id="cnpj" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-sm-4 btn-outline-dark" id="toastrSuccess">Buscar</button>
            </div>
        </form>
    </div>
</div>


<div class="row mt-5">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label" for="nome"></label>
                <input asp-for="Nome" class="form-control" id="nome" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group md-3">
                <input type="submit" value="Buscar" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <a asp-action="Index">Voltar</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
