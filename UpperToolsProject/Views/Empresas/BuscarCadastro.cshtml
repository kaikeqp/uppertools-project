@model UpperToolsProject.Models.Empresa

@{
    ViewData["Title"] = "BuscarCadastro";
}

<h1>Empresas</h1>

<h4>Buscar</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="BuscarCadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cnpj" class="control-label" for="cnpj"></label>
                <input asp-for="Cnpj"  class="form-control" id="cnpj"/>
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary " id="toastrSuccess" />
 

            </div>
        </form>
        <form
              asp-action="Details">
            <input type="hidden" asp-for="Cnpj" />
            <input  type="submit" value="Buscar" class="btn btn-dark" />
            <a href="Details">Teste</a>
        </form>
    </div>
</div>
<table>
    <tbody>
    </tbody>
</table>

<div>
    <a asp-action="Index">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">


    $(function () {
        $("#toastrSuccess").click(function () {

            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "700",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            },
            @Html.ViewContext
            toastr.info("Os dados do Cpnj só serão guardados caso o valor informado seja válido.");


        });
    });
</script>



}
